chans {
    chan1 : gain db smooth 0.99 0(gain0) 
            pan smooth 0.99 0.2(pan0)
            send testchain1 gain db 1,
            
    chan2 : gain db smooth 0.99 1(gain1)
            pan smooth 0.99 0.8(pan1),
            
    chan3 : return testchain1
            gain db 1(gain2)
            pan 0.5(pan2)
            
}

ctrl {
    gain0 : "/gains:0" in 0:1024 out -60:0,
    gain1 : "/gains:1" in 0:1024 out -60:0,
       
    pan0 : "/pans:0" in 0:1024,
    pan1 : "/pans:1" in 0:1024
}

plugins {
    # just specifies short names for ports
    gverb {
        names {
            roomsize "Roomsize (m)",
            outl "Left output",
            outr "Right output",
            input "Input"
        }
    }
}
    

chain {
    # an effect chain

    testchain1 {

        # where the two outputs are: ports within effects

        out gverb1:outl, gverb1:outr

        # the list of effects

        fx {

            # LADSPA effect label and name of effect in this chain

            gverb gverb1

            # where the inputs for this effect come from: either
            # LEFT, RIGHT or outputs of other effects. 

            in {
                # my "input" port comes from LEFT.
                input from LEFT # others would be after commas.
            }
            # parameters

            params {
                roomsize default
            }
        }
    }
}
